              </m:msub>
              <m:mi>OH</m:mi>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:mi>l</m:mi>
                <m:mo>)</m:mo>
              </m:mrow>
              <m:mo>→</m:mo>
              <m:msub>
                <m:mi>C</m:mi>
                <m:mn>2</m:mn>
              </m:msub>
              <m:msub>
                <m:mi>H</m:mi>
                <m:mn>5</m:mn>
              </m:msub>
              <m:mi>OH</m:mi>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:mi>aq</m:mi>
                <m:mo>)</m:mo>
              </m:mrow>
            </m:mrow>
          </m:math>
        </equation>
        <equation id="id339233">
          <m:math overflow="scroll" mode="display">
